{
  "root": true,
  "env": {
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "extends": [
    "eslint:recommended",
    "google"
  ],
  "rules": {
    "restricted-globals": ["error", "name", "length"],
    "prefer-arrow-callback": "off",
    "quotes": "off",
    "camelcase": "off",
    "max-len": ["warn", { "code": 200 }],
    "comma-dangle": "off",
    "object-curly-spacing": "off",
    "indent": "off"
  }
}